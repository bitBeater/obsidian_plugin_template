{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "scripts/**/*"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  }
}
